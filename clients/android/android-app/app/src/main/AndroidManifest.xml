<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.upayan.client">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:label="Upayan Device Client"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="dev.upayan.client.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="dev.upayan.client.MainService" android:foregroundServiceType="connectedDevice"/>
    </application>

</manifest>
