{
	"name": "upayan-activity-client",
	"displayName": "Upayan Activity Client",
	"publisher": "upayan",
	"engines": {
		"vscode": "^1.80.0"
	},
	"version": "0.0.1",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Upayan Activity Client",
			"properties": {
				"upayan.serverUrl": {
					"type": "string",
					"default": "http://localhost:8080/api/device/data",
					"description": "Backend endpoint to send activity to"
				},
				"upayan.apiKey": {
					"type": "string",
					"default": "",
					"description": "API key for this device"
				},
				"upayan.deviceId": {
					"type": "string",
					"default": "vscode-client",
					"description": "Logical device id to report as"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run build",
		"build": "tsc -p ./"
	},
	"devDependencies": {
		"typescript": "^5.0.0",
		"@types/vscode": "^1.80.0"
	}
}
